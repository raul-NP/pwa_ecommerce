# Usamos una imagen base de Node.js
FROM node:18-alpine AS build

# Establecemos el directorio de trabajo
WORKDIR /app

# Copiamos los archivos de la aplicaci칩n al contenedor
COPY ./ ./

# Instalamos las dependencias
RUN npm install

# Construimos la aplicaci칩n
RUN npm run build

# Usamos una imagen ligera de Nginx para servir la aplicaci칩n
FROM nginx:alpine

# Copiamos los archivos construidos en la etapa anterior
COPY --from=build /app/dist /usr/share/nginx/html

# Exponemos el puerto en el que Nginx escuchar치
EXPOSE 80

# Comando por defecto para iniciar Nginx
CMD ["nginx", "-g", "daemon off;"]
